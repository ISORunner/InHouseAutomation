{
  "typescript.tsdk": "node_modules/typescript/lib",
  "cucumberautocomplete.steps": [
    "src/steps/**/*.ts" // Path to step definitions
  ],
  "cucumberautocomplete.syncfeatures": "src/features/**/*.feature", // Path to feature files
  "cucumberautocomplete.strictGherkinCompletion": true,
  "cucumberautocomplete.smartSnippets": true,
  "cucumberautocomplete.skipDocStringsFormat": true,
  // Associate .feature files with Gherkin
  "files.associations": {
    "*.feature": "gherkin"
  },
  "[gherkin]": {
    "editor.defaultFormatter": "alexkrechik.cucumberautocomplete" // Use an accepted Gherkin formatter
  },
  "editor.formatOnSave": true // Automatically format on save for all files
}