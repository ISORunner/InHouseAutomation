{
    "compilerOptions": {
        /* Basic Options */
        "target": "esnext",
        "module": "commonjs",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "es2021"
        ],
        "sourceMap": true,
        "outDir": "./build",
        "noEmit": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "typeRoots": [
            "./node_modules/@types",
            "./@types"  // Include your custom types directory
        ]
    },
    "include": [
        "src/**/*.ts",
        "gherkin-linter.ts",
        "src/step/definitions/**/*.ts"
    ]
}
